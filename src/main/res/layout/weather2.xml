<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/weather2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a13058.weather.WeatherActivity">

    <TextView
        android:id="@+id/day_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/day_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/morn_temperature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/day_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/even_temperature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/night_temperature"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/day_pressure"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/day_humidity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/wind_speed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"/>

</LinearLayout>